â€œhealthcheck.jsâ€: â€œ// Health check script for Docker\nconst http = require(â€˜httpâ€™);\n\nconst options = {\n  host: â€˜localhostâ€™,\n  port: process.env.PORT || 5000,\n  path: â€˜/api/healthâ€™,\n  timeout: 2000\n};\n\nconst request = http.request(options, (res) => {\n  console.log(â€˜Health check status:â€™, res.statusCode);\n  if (res.statusCode === 200) {\n    process.exit(0);\n  } else {\n    process.exit(1);\n  }\n});\n\nrequest.on(â€˜errorâ€™, (err) => {\n  console.log(â€˜Health check failed:â€™, err.message);\n  process.exit(1);\n});\n\nrequest.on(â€˜timeoutâ€™, () => {\n  console.log(â€˜Health check timeoutâ€™);\n  request.destroy();\n  process.exit(1);\n});\n\nrequest.end();â€,

