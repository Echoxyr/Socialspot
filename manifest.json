  "shortcuts": [
    {
      "name": "Crea Evento Neural",
      "short_name": "Crea",
      "description": "Crea un nuovo evento con l'assistenza dell'AI",
      "url": "/?action=create",
      "icons": [
        {
          "src": "/icons/shortcut-create.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Feed Eventi",
      "short_name": "Feed", 
      "description": "Scopri eventi AI-curated per te",
      "url": "/?action=feed",
      "icons": [
        {
          "src": "/icons/shortcut-feed.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profilo Neural",
      "short_name": "Profilo",
      "description": "Visualizza il tuo profilo AI e neural score",
      "url": "/?action=profile",
      "icons": [
        {
          "src": "/icons/shortcut-profile.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Modalità Viaggiatore",
      "short_name": "Travel",
      "description": "Attiva suggerimenti AI per la tua città",
      "url": "/?action=travel",
      "icons": [
        {
          "src": "/icons/shortcut-travel.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST", 
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+socialnetneural",
      "url": "/event?id=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred"
}
