{
  "name": "SocialNet Neural",
  "short_name": "SN.n",
  "description": "AI-powered platform for intelligent social events and neural networking",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "it",
  "dir": "ltr",
  "categories": ["social", "networking", "events", "ai"],
